@font-face
		font-family 'FuturaNew'
		font-weight 400
		src url('../fonts/FuturaNewBook/FuturaNewBook.woff2') format('woff2'),
				url('../fonts/FuturaNewBook/FuturaNewBook.woff') format('woff')

@font-face
		font-family 'FuturaNew'
		font-weight 700
		src url('../fonts/FuturaNewDemi/FuturaNewDemi.woff2') format('woff2'),
				url('../fonts/FuturaNewDemi/FuturaNewDemi.woff') format('woff')

@font-face
		font-family 'FuturaNew'
		font-weight 500
		src url('../fonts/FuturaNewMedium/FuturaNewMedium.woff2') format('woff2'),
				url('../fonts/FuturaNewMedium/FuturaNewMedium.woff') format('woff')

@font-face
		font-family 'MyriadPro'
		font-weight 400
		src url('../fonts/MyriadPro/MyriadProRegular.woff2') format('woff2'),
				url('../fonts/MyriadPro/MyriadProRegular.woff') format('woff')

@font-face
		font-family 'AvenirNext'
		font-weight 400
		src url('../fonts/AvenirNextRegular/AvenirNextRegular.woff2') format('woff2'),
				url('../fonts/AvenirNextRegular/AvenirNextRegular.woff') format('woff')

html
	-webkit-text-size-adjust none
	min-height 100%

body
	font-size 13px
	line-height 16px
	min-width 1000px
	min-height 100%
	background #e0e0e0
	background-size 256px 256px

body, input, textarea
	font-family 'FuturaNew'

input, textarea
	+placeholder()
		font-weight 300

*:focus
	outline none

a
	transition color 0.2s
	text-decoration none

.base-col
	width 1100px
	margin 0 auto

label
	cursor pointer

h1
	font-size 50px
	line-height 50px
	letter-spacing 1px
	font-weight 500
