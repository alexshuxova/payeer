#footer
  position relative
  width 100%
  text-align center

.footer_1
  height 649px

.footer_bg
  z-index 1
  background url('../images/content/bg3.png')
  position absolute
  width 100%
  height 100%
  top 0
  left 0

.content
  z-index 4
  position absolute
  top 0
  left 0
  background transparent
  width 100%
  height 100%

.footer
  padding 30px
  font-family 'AvenirNext'
  font-weight 400
  text-shadow 0 0 1px
  letter-spacing 0.1px

  img
    padding-bottom 25px

  p
    font-size 12px
    line-height 22px
    width 860px
    margin 0 auto
    color #73858f

    span
      font-size 15px
      display block
      padding-bottom 6px
      color #fff

.footer--bottom
  padding-bottom 6px

  &:before
    display block
    content ''
    margin 30px 0
    background rgba(255, 255, 255, 0.2)
    height 1px
    width 100%

  a
    color #fff
    opacity 0.6
    border-bottom 1px solid #fff
    padding-bottom 2px
    margin 0 14px

    &:hover
      opacity 1

  .circle
    display inline-block
    width 6px
    height 6px
    border-radius 50px
    background #899298

.-bluebg
  background rgba(4, 35, 50, 0.9)

.-transparentbg
  background rgba(0, 0, 0, 0.6)
