.-bussiness
	background #f3f8f9
	font-weight 500
	text-align center

	p
		font-size 26px
		line-height 32px
		width: 580px
		color #0f3745
		margin 0 auto
		padding-top 22px

.bussiness_select
	font-size 0
	padding 46px 70px 20px

	a
		background #fff
		display inline-block
		position relative
		width calc(100% /3 - 35px)
		min-height 186px
		margin 0 24px
		vertical-align top
		font-size 40px
		line-height 36px
		color $blue
		borderbox()
		shadow(0 10px 20px #dde7ea)

		&:first-child
			margin-left 0

		&:last-child
			margin-right 0

		&:hover
			color #fff
			background $blue
			transition 0.2s

		div
			position absolute
			width 100%
			top 50%
			transform translate(0, -50%)
